<div id="auth-modal">
    <div class="modal-header">

        <div id="up">Sign Up</div>

        <div id="in">Sign In</div>
    </div>
    <div class="modal-body sign-in-modal">
        <form id="sign-in-form" class="border">
            <input type="email" name="credentials[email]" placeholder="Email" autofocus required>
            <br>
            <input type="password" name="credentials[password]" placeholder="Password" required>
            <input type="submit" value="Sign in">
        </form>
    </div>
    <div class="modal-body sign-up-modal">
        <form id="sign-up-form" class="border">
            <input type="email" name="credentials[email]" placeholder="Email" autofocus required>
            <br>
            <input type="password" name="credentials[password]" placeholder="Password" required>
            <input type="password" name="credentials[password_confirmation]" placeholder="Confirm Password" required>
            <input type="submit" value="Sign up">
        </form>
    </div>
</div>